{% extends 'base.html.twig' %}

{% block title %}Sliders index{% endblock %}

{% block body %}
    <h1>Sliders index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_image</th>
                <th>Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slider in sliders %}
            <tr>
                <td>{{ slider.id }}</td>
                <td>{{ slider.nomImage }}</td>
                <td>{{ slider.titre }}</td>
                <td>{{ slider.description }}</td>
                <td>
                    <a href="{{ path('sliders_show', {'id': slider.id}) }}">show</a>
                    <a href="{{ path('sliders_edit', {'id': slider.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sliders_new') }}">Create new</a>
{% endblock %}
